<Window x:Name="Remote" x:Class="Remote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remote"
        mc:Ignorable="d"
        Title="Remote" Height="600" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="1,0,-1,0">
        <Button x:Name="btn_Send" Content="Send" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="40" Width="60" FontFamily="Arial" Click="btn_Send_Click"/>
        <Button x:Name="btn_OnoffR" Content="On/Off" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Height="40" Width="70" FontFamily="Arial" Click="btn_OnoffR_Click"/>

        <Button x:Name="btn_Num1" Content="1" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num2" Content="2" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num3" Content="3" HorizontalAlignment="Right" Margin="0,80,10,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num4" Content="4" HorizontalAlignment="Left" Margin="10,160,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num5" Content="5" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num6" Content="6" HorizontalAlignment="Right" Margin="0,160,10,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num7" Content="7" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num8" Content="8" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,240,0,0" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num9" Content="9" HorizontalAlignment="Right" Margin="0,240,10,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>
        <Button x:Name="btn_Num0" Content="0" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Height="60" Width="60" IsEnabled="False" FontWeight="Bold" FontSize="18" FontFamily="Arial"/>











        <ListBox x:Name="lbox_Logging" HorizontalAlignment="Center" Margin="0,450,0,0" VerticalAlignment="Top" Height="100" Width="280"/>
        <Label x:Name="lb_Logboek" Content="Logboek:" HorizontalAlignment="Left" Margin="10,424,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial" Foreground="White"/>
        <Expander x:Name="exp_Settings" Header="Settings" HorizontalAlignment="Left" Height="125" Margin="190,320,0,0" VerticalAlignment="Top" Width="100" FontFamily="Arial">
            <Grid Background="#FFE5E5E5"/>
        </Expander>
        
        
        
        <Expander x:Name="exp_Source" Header="Source" HorizontalAlignment="Left" Height="125" Margin="10,320,0,0" VerticalAlignment="Top" Width="100" ExpandDirection="Down" Visibility="Visible" FontFamily="Arial" Background="{x:Null}" FontWeight="Normal">
            <Grid Background="#FFE5E5E5">
                
                <Button x:Name="btn_TV" Content="TV" HorizontalAlignment="Center" Margin="0,11,0,0" VerticalAlignment="Top" Width="78"/>
                <Button x:Name="btn_HDMI1" Content="HDMI 1" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Width="78"/>
                <Button x:Name="btn_HDMI2" Content="HDMI 2" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Width="78"/>
            </Grid>
        </Expander>







    </Grid>
</Window>
